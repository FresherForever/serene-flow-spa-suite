{  "version": 2,
  "buildCommand": "bash ./build.sh",
  "outputDirectory": "dist",
  "framework": "vite",
  "rewrites": [
    { "source": "/api/(.*)", "destination": "/backend/src/server.js" },
    { "source": "/(.*)", "destination": "/index.html" }
  ],
  "functions": {
    "backend/src/server.js": {
      "memory": 1024,
      "maxDuration": 10
    }
  },
  "env": {
    "NODE_ENV": "production"
  }
}
